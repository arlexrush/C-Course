<Window x:Class="Interfaz_Transparente.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interfaz_Transparente"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Width="{Binding Width, ElementName=w}" Height="{Binding Height, ElementName=w}">
        <Border CornerRadius="15" Margin="5" BorderThickness="2" BorderBrush="White" Opacity="0.8">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="5" Color="#FF414141" BlurRadius="5"/>
            </Border.Effect>
            <Border Background="Red" Opacity="0.2" Margin="0" CornerRadius="5"/>
        </Border>
    </Grid>

</Window>
