<Window x:Class="Miinterfaz2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Miinterfaz2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Name="Panel" PreviewMouseLeftButtonDown="Panel_PreviewMouseLeftButtonDown">
        <Button Name="Btn1" Content="Dale!" 
                Margin="15" Width="150" HorizontalAlignment="Left" 
                Background="Yellow" 
                Click="OnClick1" ClickMode="Hover"></Button>
        <Button Name="Btn2" Content="Dale2!" 
                Margin="15" Width="150" HorizontalAlignment="Center" 
                Background="Blue" 
                Click="OnClick2" ClickMode="Press"></Button>
        <Button Name="Btn3" Content="Dale3!" 
                Margin="15" Width="150" HorizontalAlignment="Right" 
                Background="Red" 
                Click="OnClick3" ClickMode="Release"></Button>
           
    </StackPanel>
    
</Window>
